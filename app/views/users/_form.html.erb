<%= simple_form_for @user do |f| %>
  <% if @user.errors.any? %>
        <%= f.error_notification %>
        <%= display_base_errors @user %>
  <% end %>
    <%= f.input :username, :autofocus => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
    <%= f.label :select_role %><br />
    <%= f.input :role_ids, :collection => Role.all, :as => :radio_buttons, :label_method => lambda {|t| t.name.titleize}, :label => false, :item_wrapper_class => 'inline', checked: Role.find_by_name(:saleStaff).id %>
    <%= f.button :submit, 'Sign up', :class => 'btn-primary' %>
<% end %>
